{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/blogpost.json",
  "title": "Blog Post Accelerator",
  "description": "Blog Post Accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "snippet",
    "title",
    "keywords",
    "content"
  ],
  "type": "object",
  "properties": {
    "snippet": {
      "type": "object",
      "title": "Snippet",
      "description": "",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/snippet.json"
        }
      ]
    },
    "author": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "title": "Author",
      "description": ""
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "title": "Title",
      "description": ""
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "title": "Date",
      "description": ""
    },
    "urlSlug": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "Url Slug",
      "description": ""
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "description": "",
      "minItems": 0,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 0,
        "maxLength": 255,
        "title": "Tag",
        "description": ""
      }
    },
    "readTime": {
      "type": "integer",
      "title": "Read Time",
      "description": ""
    },
    "content": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "Content",
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/banner.json",
                  "{CONTENT_TYPE_BASEPATH}/image.json",
                  "{CONTENT_TYPE_BASEPATH}/video.json",
                  "{CONTENT_TYPE_BASEPATH}/text.json",
                  "{CONTENT_TYPE_BASEPATH}/cardlist.json",
                  "{CONTENT_TYPE_BASEPATH}/blogpost.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 0,
      "maxItems": 20,
      "title": "Content",
      "description": ""
    }
  }
}
