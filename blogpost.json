{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/blogpost.json",
  "title": "Blog post accelerator",
  "description": "Blog post accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "title",
    "author",
    "date",
    "urlSlug",
    "tags",
    "readTime",
    "content",
    "snippet"
  ],
  "required": [
    "title",
    "author",
    "date",
    "urlSlug",
    "readTime",
    "content",
    "snippet"
  ],
  "type": "object",
  "properties": {
    "snippet": {
      "title": "Snippet",
      "description": "",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/snippet.json"
        }
      ]
    },
    "author": {
      "title": "Author",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "title": {
      "title": "Title",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "date": {
      "title": "Date",
      "description": "Creation date (YYYY-MM-DD)",
      "type": "string",
      "maxLength": 10
    },
    "urlSlug": {
      "title": "Url slug",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "tags": {
      "title": "Tags",
      "description": "",
      "type": "array",
      "minItems": 0,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255,
        "title": "Tag",
        "description": ""
      }
    },
    "readTime": {
      "title": "Read time",
      "description": "",
      "type": "integer"
    },
    "content": {
      "title": "Content",
      "description": "",
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "Content",
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/banner.json",
                  "{CONTENT_TYPE_BASEPATH}/image.json",
                  "{CONTENT_TYPE_BASEPATH}/video.json",
                  "{CONTENT_TYPE_BASEPATH}/text.json",
                  "{CONTENT_TYPE_BASEPATH}/cardlist.json",
                  "{CONTENT_TYPE_BASEPATH}/blogpost.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 20,
    }
  }
}
